<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_129sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/ivNewsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#94212529" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#41484E"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/tvNewsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akrobat_bold"
            android:text="Встречайте новый лаунчер для вашего смартфона"
            android:textColor="#ffffff"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>
</FrameLayout>

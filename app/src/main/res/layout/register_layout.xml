<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <!-- Фоновое затемнение -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Левая панель с логотипом -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/logo_no_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akrobat_extrabold"
            android:gravity="center"
            android:text="ПРИСОЕДИНЯЙСЯ К ИГРЕ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />

        <!-- Отображение ника и ID игрока -->
        <TextView
            android:id="@+id/player_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#1A2A2E33"
            android:fontFamily="@font/akrobat_bold"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Новый_игрок[?]"
            android:textColor="#5096FF"
            android:textSize="@dimen/_16sdp" />

        <!-- Индикатор активности игрока на сервере -->
        <TextView
            android:id="@+id/server_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/akrobat_bold"
            android:text="Ожидание регистрации..."
            android:textColor="#FFA000"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <!-- Правая панель с формой регистрации -->
    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/left_panel"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/akrobat_extrabold"
            android:text="РЕГИСТРАЦИЯ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_22sdp" />

        <!-- Двухстолбцовый макет для оптимизации пространства -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Левая колонка с полями -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/input_background"
                    android:fontFamily="@font/akrobat_bold"
                    android:hint="Почта"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/input_background"
                    android:fontFamily="@font/akrobat_bold"
                    android:hint="Пароль"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <!-- Правая колонка с полями -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Нация:"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_16sdp" />

                    <Spinner
                        android:id="@+id/nation_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/spinner_background"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Возраст:"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_16sdp" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/akrobat_bold"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#80FFFFFF"
                        android:textSize="@dimen/_16sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/akrobat_bold"
            android:text="ЗАРЕГИСТРИРОВАТЬСЯ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/akrobat_bold"
            android:text="Уже есть аккаунт? Войти"
            android:textColor="#5096FF"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout> 
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_notif"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_48sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:layout_gravity="bottom|center"
    android:elevation="@dimen/_4sdp"
    android:background="#2E3238">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dw_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/br_not_fl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <FrameLayout
                android:id="@+id/cardView7"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:background="#212529"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/noty_bg_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_8sdp" />

                <View
                    android:id="@+id/br_not_view"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_noty_good"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/br_not_ruble"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:id="@+id/br_not_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:maxLines="3"
                android:paddingEnd="@dimen/_12sdp"
                android:text=" "
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/akrobat_bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/br_not_buttons"
                app:layout_constraintStart_toEndOf="@+id/cardView7"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/br_not_progress"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:indeterminate="false"
                android:max="1000"
                android:progress="800"
                android:progressDrawable="@drawable/progressbar_noty"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <FrameLayout
                android:id="@+id/br_not_buttons"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/br_not_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#1A73E8"
                    android:text="OK"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:visibility="visible" />

            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

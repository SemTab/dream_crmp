<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#343A40"
    android:layout_marginVertical="@dimen/_4sdp"
    android:padding="@dimen/_8sdp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/trackIcon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_music_note"
        android:padding="@dimen/_10sdp"
        android:background="#1F232A"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp">
        
        <TextView
            android:id="@+id/trackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название трека"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/akrobat_bold"
            android:maxLines="1"
            android:ellipsize="end"/>
            
        <TextView
            android:id="@+id/trackArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Исполнитель"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/trackDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:30"
        android:textColor="#80FFFFFF"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginEnd="@dimen/_5sdp"/>
        
    <ImageButton
        android:id="@+id/trackMoreOptions"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:src="@drawable/ic_settings_new_icon"
        android:background="@android:color/transparent"
        android:contentDescription="Опции трека"/>
</LinearLayout> 
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <!-- Фоновое затемнение -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Левая панель с логотипом -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/logo_no_map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/akrobat_extrabold"
            android:gravity="center"
            android:text="ДОБРО ПОЖАЛОВАТЬ В ИГРУ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18sdp" />

        <!-- Отображение ника и ID игрока -->
        <TextView
            android:id="@+id/player_identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#1A2A2E33"
            android:fontFamily="@font/akrobat_bold"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Nick_Name[0]"
            android:textColor="#5096FF"
            android:textSize="@dimen/_16sdp" />

        <!-- Индикатор активности игрока на сервере -->
        <TextView
            android:id="@+id/server_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/akrobat_bold"
            android:text="Онлайн на сервере"
            android:textColor="#4CAF50"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <!-- Правая панель с формой авторизации -->
    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/left_panel"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/akrobat_extrabold"
            android:text="АВТОРИЗАЦИЯ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_22sdp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/input_background"
            android:fontFamily="@font/akrobat_bold"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:textSize="@dimen/_16sdp" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/akrobat_bold"
            android:text="ВОЙТИ"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/akrobat_bold"
            android:text="Нет аккаунта? Зарегистрироваться"
            android:textColor="#5096FF"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout> 
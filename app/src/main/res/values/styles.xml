<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">#1F7DC5</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>
    
    <style name="TranslucentGameOverlay" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">#1F7DC5</item>
        <item name="android:windowAnimationStyle">@style/ActionsMenuAnimation</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <style name="ActionsMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">#1F7DC5</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>
    
    <style name="AppDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorAccent">#1A73E8</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
    
    <style name="ss_btn" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textColor">#0a1d3b</item>
        <item name="android:background">@drawable/ss_btn_bg</item>
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:text">@string/select_pos</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="ss_btn_new" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_7sdp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/ss_btn_bg_new</item>
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:text">@string/select_pos</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/akrobat_bold</item>
    </style>
    
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_secondary_text_holo_dark</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_dark</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_dark</item>
        <item name="android:textColorLink">@color/wallet_holo_blue_light</item>
    </style>
    <style name="WalletFragmentDefaultDetailsHeaderTextAppearance" parent="@style/WalletFragmentDefaultDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="WalletFragmentDefaultButtonTextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/wallet_primary_text_holo_light</item>
        <item name="android:textColorHighlight">@color/wallet_highlighted_text_holo_light</item>
        <item name="android:textColorHint">@color/wallet_hint_foreground_holo_light</item>
        <item name="android:textColorLink">#1F7DC5</item>
    </style>
    <style name="WalletFragmentDefaultStyle">
        <item name="buyButtonHeight">48.0dip</item>
        <item name="buyButtonWidth">match_parent</item>
        <item name="buyButtonText">buy_with_google</item>
        <item name="buyButtonAppearance">classic</item>
        <item name="maskedWalletDetailsTextAppearance">@style/WalletFragmentDefaultDetailsTextAppearance</item>
        <item name="maskedWalletDetailsHeaderTextAppearance">@style/WalletFragmentDefaultDetailsHeaderTextAppearance</item>
        <item name="maskedWalletDetailsBackground">@color/wallet_bright_foreground_holo_light</item>
        <item name="maskedWalletDetailsButtonTextAppearance">@style/WalletFragmentDefaultButtonTextAppearance</item>
        <item name="maskedWalletDetailsButtonBackground">@android:drawable/btn_default</item>
        <item name="maskedWalletDetailsLogoTextColor">@color/wallet_bright_foreground_holo_dark</item>
        <item name="maskedWalletDetailsLogoImageType">classic</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="round_progressbar" parent="android:Widget.Holo.ProgressBar">
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_marginLeft">8dp</item>
</style>

    <style name="HudTextWithShadow">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="SettingsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/akrobat_bold</item>
    </style>
</resources>
